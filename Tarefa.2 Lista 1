#include <iostream>
using namespace std;

int main(){
	
/*. Calcule e escreva a quantidade de dinheiro gasta por um fumante a partir da leitura das
informações número de anos que ele fuma, quantidade] de cigarros fumados por dia e preço de
uma carteira.*/

int anos, cigarros, preco;
float total;

cout << "!VAMOS CALCULAR O QUANTO VOCE JA GASTOU COM CIGARROS!\n";
cout << "Digite a quantos anos voce fuma: ";
cin >> anos;

cout << "Digite o quantos cigarros voce fuma por dia: ";
cin >> cigarros;

cout << "Digite o quanto voce gasta em uma carteira de cigarros: ";
cin >> preco;

anos = anos*365;

total=(anos*cigarros)*preco;

cout << "Voce ja gastou: " << total << " com cigarros!";



return 0;
}
